<script>
    $('.addProductComment').on('click',
        function () {
            let bookid = '{{book.id}}';
            let customerid = $('.getCustomerEmail')[0].innerHTML;
            let rate = $('#getRate')[0].value;
            let comment = $('#getComment')[0].value;
            $.ajax({
                url: "/productDetail/addcomment",
                method: "POST",
                data: {
                    bookid,
                    customerid,
                    comment,
                    rate,
                },
                success: function (data) {
                    reloadComment();
                    console.log('addProdcuctCart', data);
                }
            });
        }
    )
    $('.addProductCart').on('click',
        function () {
            let bookid = '{{book.id}}';
            $.ajax({
                url: "/apiAddProductCart/add",
                method: "POST",
                data: {
                    bookid,
                },
                success: function (data) {
                    alert('Bạn đã thêm sách thành công!');
                    console.log('addProdcuctCart', data);
                }
            });
        }
    )
    function reloadComment() {
        let bookid = '{{book.id}}';
        $.ajax({
            url: "/productDetail/comments/get",
            method: "GET",
            data: {
                bookid,
            },
            success: function (comments) {
                let html = "";
                let rate = 5;
                for (let c of comments[0]) {
                    let crate = '<ul class="user-rating">';
                    rate = parseInt(c.rate);
                    for (let i = 0; i < rate; i++) {
                        crate += '<li><i class="lni-star-filled"></i></li>';
                    }
                    crate += '</ul>';
                    let cdate = `<span> ${c.date} </span> `;
                    let cname = `<h4> ${c.name} (${cdate}) ${crate}</h4>`;
                    let ccomment = `<p> ${c.comment} </p>`;

                    html += '<div>';
                    html += cname + ccomment;
                    html += '</div> <br>';
                }
                $('#insertcommenthtml').html(html);
                console.log('addProdcuctCart', comments);
            }
        });
    }

    $('.customerReviewClick').on('click',reloadComment());
</script>
